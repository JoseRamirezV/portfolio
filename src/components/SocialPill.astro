---
const { username, url } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  title={username}
  class="flex items-center px-2 py-1 rounded-full font-medium text-gray-700 dark:text-gray-200 border border-gray-600 dark:border-gray-600 hover:bg-sky-50 dark:bg-gray-800 hover:text-blue-500 hover:border-blue-300 duration-200"
>
  <slot />
</a>
