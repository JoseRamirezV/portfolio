---
interface Props {
  username?: string;
  url?: string;
}
const { username, url } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  title={username}
  class="flex items-center px-2 py-1 rounded-full font-medium text-gray-700 dark:text-gray-200 border border-gray-600 dark:bg-gray-800 hover:text-blue-500 hover:border-blue-500 dark:hover:text-gray-200 dark:hover:border-slate-400 duration-200 cursor-pointer"
>
  <slot />
</a>
