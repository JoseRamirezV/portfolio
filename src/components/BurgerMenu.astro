---
interface Props {
  id: string
}
const {id} = Astro.props
---

<!-- Modified version of UiVerse burger menu icon: https://uiverse.io/Cevorob/good-wolverine-51 -->
<button
  class="burger scale-50 [&>span]:bg-black dark:[&>span]:bg-white"
  id={id}
>
  <span></span>
  <span></span>
  <span></span>
</button>

<style>
  .burger {
    position: relative;
    width: 40px;
    height: 30px;
    background: transparent;
    cursor: pointer;
  }

  .burger input {
    display: none;
  }

  .burger span {
    display: block;
    position: absolute;
    height: 4px;
    width: 100%;
    opacity: 1;
    left: 0;
    transition: 0.25s ease-in-out;
  }

  .burger span:nth-of-type(1) {
    top: 0px;
    transform-origin: left center;
  }

  .burger span:nth-of-type(2) {
    top: 50%;
    transform: translateY(-50%);
    transform-origin: left center;
  }

  .burger span:nth-of-type(3) {
    top: 100%;
    transform-origin: left center;
    transform: translateY(-100%);
  }

  .open > span:nth-of-type(1) {
    transform: rotate(45deg);
    top: 0px;
    left: 5px;
  }

  .open > span:nth-of-type(2) {
    width: 0%;
    opacity: 0;
  }

  .open > span:nth-of-type(3) {
    transform: rotate(-45deg);
    top: 28px;
    left: 5px;
  }
</style>
