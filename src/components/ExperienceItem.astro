---
import ArrowRight from "@/icons/ArrowRight.astro";
import Check from "@/icons/Check.astro";

const { company, position, url, startDate, endDate, summary, highlights} = Astro.props;

const highlightsContent = highlights.length > 0 && highlights.map(({ content, highlight }) => content.replace(highlight, `<strong>${highlight}</strong>`));
---

<span
  class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full start-1 dark:ring-gray-900 dark:bg-blue-900"
>
  <svg
    class="size-2.5 text-blue-800 dark:text-blue-300"
    aria-hidden="true"
    xmlns="http://www.w3.org/2000/svg"
    fill="currentColor"
    viewBox="0 0 20 20"
  >
    <path
      d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
    ></path>
  </svg>
</span>
<h3 class="flex items-center text-2xl font-bold text-blue-500 dark:text-blue-400">
  {position}
  {
    !endDate && (
      <span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 ms-3">
        Actual
      </span>
    )
  }
</h3>
<span class="text-lg font-medium text-gray-600 dark:text-white">{company}</span>
<time
  class="block mt-1 mb-2 text-xs leading-none text-gray-500 dark:text-gray-300"
>
  {`${startDate} - ${endDate ?? 'Presente'}`}
</time>
<p class="mb-4 text-gray-600 dark:text-white ">
  {summary}
  {
    highlightsContent && (
        <ul class="max-w-2xl text-gray-500 dark:text-gray-300">
          {highlightsContent.map((highlight) => (
            <li class="flex items-baseline gap-2">
                <Check class="max-sm:size-12 size-3 text-blue-500 dark:text-blue-400"/>
                <p class="w-full text-pretty [&>strong]:font-semibold [&>strong]:text-blue-500 dark:[&>strong]:text-blue-400" set:html={highlight}/>
            </li>
          ))}
        </ul>
    )
  }
</p>
{
  url && (
    <a
      href={url}
      class="inline-flex items-center gap-1 px-4 py-2 text-sm font-semibold text-gray-600 bg-white border border-gray-200 rounded-lg hover:bg-sky-50 hover:text-blue-500 dark:hover:text-white dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-slate-800/60 transition"
    >
      Ir a sitio
      <ArrowRight class="size-3 text-blue-500 dark:text-blue-400">
    </a>
  )
}
