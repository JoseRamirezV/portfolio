---
import Header from "@/components/Header.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative">
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full dark:bg-slate-950 bg-white bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)] dark:bg-[radial-gradient(ellipse_50%_50%_at_50%_-20%,rgba(0,0,255,0.2),rgba(38,38,38,0.5))]"
    >
    </div>
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  ::-webkit-scrollbar {
    width: 0.85rem;
  }

  ::-webkit-scrollbar-thumb {
    border-radius: 50px;
    border: 0.15rem solid white;
    background: rgb(156 163 175);
  }

  ::-webkit-scrollbar-thumb:hover {
    background: rgb(107 114 128);
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overflow-x: hidden;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }

  @media (prefers-color-scheme: dark) {
    ::-webkit-scrollbar-track{
      background: rgb(21, 21, 29);
    }
    ::-webkit-scrollbar-thumb {
      border-color: rgb(21, 21, 29);
      background: rgb(31 41 55);
    }

    ::-webkit-scrollbar-thumb:hover {
      background: rgba(31, 41, 55, 0.6);
    }
  }
</style>
