---
import Footer from '@/components/Footer.astro';
import Header from '@/components/Header.astro';
import '@fontsource-variable/onest';

console.log({url: Astro.url});

const { title, description } = Astro.props;
---

<!doctype html>
<html lang='en' class=''>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content={description} />
    <meta name='viewport' content='width=device-width' />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon-light.svg'
      media='(prefers-color-scheme: light)'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon-dark.svg'
      media='(prefers-color-scheme: dark)'
    />

    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='relative'>
    <div
      class='absolute top-0 bottom-0 z-[-2] min-h-screen w-full dark:bg-slate-950 bg-white bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)] dark:bg-[radial-gradient(ellipse_50%_50%_at_50%_-20%,rgba(0,0,255,0.2),rgba(38,38,38,0.5))]'
    >
    </div>
    <Header />
    <main class='mx-4 max-sm:pt-10 sm:max-md:pt-20'>
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: 'Onest Variable', sans-serif;
    scroll-behavior: smooth;
  }

  ::-webkit-scrollbar {
    width: 0.85rem;
  }

  ::-webkit-scrollbar-track {
    @apply bg-white;
  }

  ::-webkit-scrollbar-thumb {
    border: 0.15rem solid;
    @apply rounded-full border-white bg-[rgb(156,163,175)];
  }
  ::-webkit-scrollbar-thumb:hover {
    @apply bg-[rgb(107,114,128)];
  }

  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
    overflow-x: hidden;
  }

  .dark ::-webkit-scrollbar-track {
    @apply bg-[rgb(20,22,30)];
  }

  .dark ::-webkit-scrollbar-thumb {
    @apply rounded-full border-[rgb(20,22,30)] bg-slate-700;
  }

  .dark ::-webkit-scrollbar-thumb:hover {
    @apply bg-slate-800;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
